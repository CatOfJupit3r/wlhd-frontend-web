{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@pages/*": ["./pages/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"],
            "@services/*": ["./services/*"],
            "@hooks/*": ["./hooks/*"],
            "@redux/*": ["./redux/*"],
            "@models/*": ["./models/*"],
            "@router/*": ["./router/*"],
            "@lib*": ["./lib/*"],
            "config": ["./config"],
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["src"]
}
